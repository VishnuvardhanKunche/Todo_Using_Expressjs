<h1 class="text-2xl font-semibold text-gray-600">My Todo Application</h1>

<form action="/todos" method="POST" class="flex gap-2 py-4">
  <div class="flex-auto w-64">
    <input type="text" name="title" class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2" placeholder="What's next?" required>
  </div>
  <div class="flex-auto w-32">
    <input type="date" name="dueDate" class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2 leading-4">
  </div>
  <div class="flex-none">
    <button type="submit" class="text-white bg-green-600 hover:bg-green-700 font-medium rounded text-sm px-5 py-2">Add</button>
  </div>
</form>
