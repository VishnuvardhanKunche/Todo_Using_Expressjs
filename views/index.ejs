<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo Dashboard</title>
  <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>Welcome, <%= user.first_name %>!</h1>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Flash Messages -->
      <div class="flash-messages">
        <% if (messages.error && messages.error.length > 0) { %>
          <% messages.error.forEach(msg => { %>
            <div class="flash-message flash-error"><%= msg %></div>
          <% }) %>
        <% } %>

        <% if (messages.success && messages.success.length > 0) { %>
          <% messages.success.forEach(msg => { %>
            <div class="flash-message flash-success"><%= msg %></div>
          <% }) %>
        <% } %>
      </div>

      <!-- Add Todo Form -->
      <div class="form-container">
        <h2>Add New Todo</h2>
        <form action="/todos" method="POST" class="add-todo-form">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
            <label for="title">Todo Title</label>
            <input 
              type="text" 
              name="title" 
              id="title"
              class="form-input" 
              placeholder="Enter your todo (minimum 5 characters)" 
              required
            >
          </div>
          <div class="form-group">
            <label for="dueDate">Due Date</label>
            <input 
              type="date" 
              name="dueDate" 
              id="dueDate"
              class="form-input" 
              required
            >
          </div>
          <button type="submit" class="btn btn-primary">Add Todo</button>
        </form>
      </div>

      <!-- Overdue Todos -->
      <div class="todo-section">
        <div class="section-header">
          <h2 class="section-title">ðŸš¨ Overdue</h2>
          <span class="section-count"><%= overdueTodos.length %></span>
        </div>
        <% if (overdueTodos.length === 0) { %>
          <div class="empty-state">
            No overdue todos! You're doing great! ðŸŽ‰
          </div>
        <% } else { %>
          <ul class="todo-list">
            <% overdueTodos.forEach(todo => { %>
              <li class="todo-item overdue">
                <div class="todo-content">
                  <form action="/todos/<%= todo.id %>/set-completion" method="POST" style="display: contents;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input 
                      type="checkbox" 
                      name="completed" 
                      value="true" 
                      class="todo-checkbox"
                      onchange="this.form.submit()" 
                      <%= todo.completed ? 'checked' : '' %>
                    >
                  </form>
                  <div>
                    <span class="todo-text <%= todo.completed ? 'completed' : '' %>">
                      <%= todo.title %>
                    </span>
                    <span class="todo-date">Due: <%= todo.dueDate %></span>
                  </div>
                </div>
                <div class="todo-actions">
                  <form action="/todos/<%= todo.id %>/delete" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Due Today -->
      <div class="todo-section">
        <div class="section-header">
          <h2 class="section-title">ðŸ“… Due Today</h2>
          <span class="section-count"><%= dueTodayTodos.length %></span>
        </div>
        <% if (dueTodayTodos.length === 0) { %>
          <div class="empty-state">
            No todos due today! Take a well-deserved break! â˜•
          </div>
        <% } else { %>
          <ul class="todo-list">
            <% dueTodayTodos.forEach(todo => { %>
              <li class="todo-item due-today">
                <div class="todo-content">
                  <form action="/todos/<%= todo.id %>/set-completion" method="POST" style="display: contents;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input 
                      type="checkbox" 
                      name="completed" 
                      value="true" 
                      class="todo-checkbox"
                      onchange="this.form.submit()" 
                      <%= todo.completed ? 'checked' : '' %>
                    >
                  </form>
                  <div>
                    <span class="todo-text <%= todo.completed ? 'completed' : '' %>">
                      <%= todo.title %>
                    </span>
                    <span class="todo-date">Due: <%= todo.dueDate %></span>
                  </div>
                </div>
                <div class="todo-actions">
                  <form action="/todos/<%= todo.id %>/delete" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Due Later -->
      <div class="todo-section">
        <div class="section-header">
          <h2 class="section-title">ðŸ“‹ Due Later</h2>
          <span class="section-count"><%= dueLaterTodos.length %></span>
        </div>
        <% if (dueLaterTodos.length === 0) { %>
          <div class="empty-state">
            No future todos planned! Time to set some goals! ðŸŽ¯
          </div>
        <% } else { %>
          <ul class="todo-list">
            <% dueLaterTodos.forEach(todo => { %>
              <li class="todo-item due-later">
                <div class="todo-content">
                  <form action="/todos/<%= todo.id %>/set-completion" method="POST" style="display: contents;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input 
                      type="checkbox" 
                      name="completed" 
                      value="true" 
                      class="todo-checkbox"
                      onchange="this.form.submit()" 
                      <%= todo.completed ? 'checked' : '' %>
                    >
                  </form>
                  <div>
                    <span class="todo-text <%= todo.completed ? 'completed' : '' %>">
                      <%= todo.title %>
                    </span>
                    <span class="todo-date">Due: <%= todo.dueDate %></span>
                  </div>
                </div>
                <div class="todo-actions">
                  <form action="/todos/<%= todo.id %>/delete" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Completed Todos -->
      <div class="todo-section">
        <div class="section-header">
          <h2 class="section-title">âœ… Completed</h2>
          <span class="section-count"><%= completedTodos.length %></span>
        </div>
        <% if (completedTodos.length === 0) { %>
          <div class="empty-state">
            No completed todos yet! Get started and check some off! ðŸ’ª
          </div>
        <% } else { %>
          <ul class="todo-list">
            <% completedTodos.forEach(todo => { %>
              <li class="todo-item completed">
                <div class="todo-content">
                  <form action="/todos/<%= todo.id %>/set-completion" method="POST" style="display: contents;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input 
                      type="checkbox" 
                      name="completed" 
                      value="false" 
                      class="todo-checkbox"
                      onchange="this.form.submit()" 
                      checked
                    >
                  </form>
                  <div>
                    <span class="todo-text completed">
                      <%= todo.title %>
                    </span>
                    <span class="todo-date">Due: <%= todo.dueDate %></span>
                  </div>
                </div>
                <div class="todo-actions">
                  <form action="/todos/<%= todo.id %>/delete" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>